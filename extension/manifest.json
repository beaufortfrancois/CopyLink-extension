{
   "manifest_version": 2,
   "background": {
     "page": "background.html",
     "persistent": false
   },
   "browser_action": {
      "default_icon": "icon64.png",
      "default_title": "Create Link"
   },
   "description": "Copy current page URL to clipboard in HTML.",
   "icons": {
      "128": "icon128.png",
      "16": "icon16.png",
      "32": "icon32.png",
      "64": "icon64.png"
   },
   "name": "Create Link Simple",
  
   "permissions": [ "tabs", "http://*/*", "https://*/*", "contextMenus" ],
   "version": "0.3"
}
